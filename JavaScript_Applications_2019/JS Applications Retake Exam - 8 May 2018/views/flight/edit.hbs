{{> header}}
<section id="viewEditFlight">
    <h2>Edit existing flight</h2>
    <form id="formEditFlight" action="#/edit/{{flight._id}}" method="POST">
        <label>Destination:</label>
        <input type="text" name="destination" placeholder="Destination" value="{{flight.destination}}">
        <label>Origin:</label>
        <input type="text" name="origin" placeholder="Origin" value="{{flight.origin}}">
        <label>Departure Date:</label>
        <input type="date" id="tt" name="departureDate" value="{{flight.deparureDate}}">
        <label>Departure Time:</label>
        <input type="time" name="departureTime" value="{{flight.depatureTime}}">
        <label>Number of Seats:</label>
        <input type="number" name="seats" value="{{flight.seats}}">
        <label>Cost per seat:</label>
        <input type="number" step="2" name="cost" value="{{flight.cost}}">
        <label>Image:</label>
        <input type="text" name="img" value="{{flight.img}}">
        <label>Is Public:</label>
        <input type="checkbox" name="public" checked = {{flight.public}}>
        <input type="submit" class="save-changes" value="Save Changes">
    </form>
</section>
{{> footer}}