{{> header}}
<div id="edit-listing">
    <form action="#/edit/{{car._id}}" method="POST">

        <div class="container">
            <h1>Edit Car Listing</h1>
            <p>Please fill in this form to edit an listing.</p>
            <hr>
            <input type="hidden" name="carId" value="{{car._id}}" />

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title" value="{{car.title}}">

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description" value="{{car.description}}">

            <p>Car Brand</p>
            <input type="text" placeholder="Enter Car Brand" name="brand" value="{{car.brand}}">

            <p>Car Model</p>
            <input type="text" placeholder="Enter Car Model" name="model" value="{{car.model}}">

            <p>Car Year</p>
            <input type="number" placeholder="Enter Car Year" name="year" value="{{car.year}}">

            <p>Car Image</p>
            <input type="text" placeholder="Enter Car Image" name="imageUrl" value="{{car.imageUrl}}">

            <p>Car Fuel Type</p>
            <input type="text" placeholder="Enter Car Fuel Type" name="fuel" value="{{car.fuel}}">

            <p>Car Price</p>
            <input type="number" placeholder="Enter Car Price" name="price" value="{{car.price}}">

            <hr>
            <button type="submit" class="registerbtn">Edit Listing</button>
        </div>
    </form>
</div>
{{> footer}}