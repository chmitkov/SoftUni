<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="our-team-main">

                <div class="team-front">
                    <img src="{{foodImageURL}}" />
                    <h3>{{meal}}</h3>
                    <p>{{description}}</p>
                </div>

                <div class="team-back">
                    <div class="back-side-info">
                        <h4>Ingredients</h4>
                        <ul>
                            {{#each ingredients}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        <a href="#/details/{{_id}}" id="viewTheRecipe" >Click to view the recepie</a>
                    </div>

                    <img class="foodImage" src="{{foodImageURL}}" />
                </div>

            </div>
        </div>
    </div>
</div>